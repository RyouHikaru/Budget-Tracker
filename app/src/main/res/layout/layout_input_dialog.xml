<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity">

    <Spinner
        android:id="@+id/id_spinner"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_below="@+id/id_textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp" />

    <TextView
        android:id="@+id/id_textView2"
        android:layout_width="186dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="Category"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/id_textView3"
        android:layout_width="186dp"
        android:layout_height="37dp"
        android:layout_below="@+id/id_spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="Cost"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/id_costEditText"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:hint="How much?"
        android:inputType="number|numberDecimal"
        android:textAlignment="center"
        android:textSize="20sp" />

</RelativeLayout>